<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.graphics.Color" />
        <variable name="teamQuest" type="com.severenity.entity.quest.team.TeamQuest" />
    </data>

    <android.support.v7.widget.CardView
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvQuestItem">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:id="@+id/ivQuestIcon"
                android:src="@{teamQuest.isFinished ? @drawable/icon_quest_finished : @drawable/icon_quest_in_progress}"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <!--<TextView-->
            <!--android:layout_marginTop="12dp"-->
            <!--android:layout_marginBottom="12dp"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:drawableTop="@drawable/place_money"-->
            <!--android:id="@+id/tvCoinsAmountForQuest"-->
            <!--android:text="@{String.valueOf(teamQuest.reward.credits)}"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:gravity="center"-->
            <!--android:textSize="12sp" />-->

            <LinearLayout
                android:id="@+id/llQuestDetails"
                android:layout_toStartOf="@id/tvExpAmountForQuest"
                android:layout_toEndOf="@id/ivQuestIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <TextView
                    android:textSize="20sp"
                    android:id="@+id/tvQuestTitle"
                    android:text="@{teamQuest.title}"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="12sp"
                    android:layout_gravity="center"
                    android:id="@+id/tvQuestDescription"
                    android:text="@{teamQuest.description}"
                    android:lines="2"
                    android:ellipsize="marquee"
                    android:singleLine="false"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>