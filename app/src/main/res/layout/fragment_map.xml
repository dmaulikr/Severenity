<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".view.fragments.GameMapFragment">
    
    <!-- The main content view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.gms.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/userInfo"
            android:layout_margin="15dp"
            android:background="@drawable/rounded_layout_bg"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/mapUserAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tvImmunityValue"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/mapUserAvatar"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:text="@string/immunity_value" />

            <TextView
                android:gravity="center"
                android:id="@+id/tvMentalityValue"
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvImmunityValue"
                android:layout_margin="5dp"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:text="@string/mentality_value" />

            <TextView
                android:gravity="center"
                android:id="@+id/tvExperienceValue"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/tvImmunityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/mapUserAvatar"
                android:layout_margin="5dp"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:text="@string/experience_value" />

            <TextView
                android:gravity="center"
                android:id="@+id/tvLevelValue"
                android:textColor="@color/colorPrimaryDark"
                android:layout_below="@id/tvImmunityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvExperienceValue"
                android:layout_margin="5dp"
                android:layout_marginBottom="0dp"
                android:textSize="12sp"
                android:text="@string/level_value" />

            <ImageView
                android:id="@+id/ivWardsSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/spell_ward"/>
        </RelativeLayout>

        <com.szugyi.circlemenu.view.CircleLayout
            xmlns:circle="http://schemas.android.com/apk/res-auto"
            android:id="@+id/clSymbolsMenu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="-100dp"
            android:layout_gravity="center_horizontal"
            circle:isRotating="true" >

            <include layout="@layout/menu_items" />
        </com.szugyi.circlemenu.view.CircleLayout>

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/userInfo"
            android:id="@+id/tvAttributions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/lvSpells"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@android:color/transparent"/>
</android.support.v4.widget.DrawerLayout>
