<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerMap"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.severenity.view.fragments.GameMapFragment">
    
    <!-- The main content view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:style_url="@string/mapbox_style_url_dark" />

        <TextView
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/map"
            android:id="@+id/tvAttributions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:visibility="invisible"
            android:id="@+id/userActions"
            android:background="@color/black"
            android:layout_marginTop="5dp"
            android:padding="1dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btnCapturePlace"
                android:layout_marginEnd="2dp"
                android:src="@drawable/sig_capture_place" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btnCapturePlayer"
                android:layout_marginEnd="2dp"
                android:src="@drawable/sig_capture_player" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btnAttack"
                android:layout_marginEnd="2dp"
                android:src="@drawable/sig_attack" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btnDefend"
                android:layout_marginEnd="2dp"
                android:src="@drawable/sig_defend" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/btnInvisibility"
                android:layout_marginEnd="2dp"
                android:src="@drawable/sig_invisibility" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay" />
    </RelativeLayout>

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/lvSpells"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@android:color/transparent"/>
</android.support.v4.widget.DrawerLayout>
