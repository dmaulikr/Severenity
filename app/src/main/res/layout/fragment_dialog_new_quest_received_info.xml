<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivDialogQuestIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/initial_quest_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"/>

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/tvDialogQuestTitle"
        android:layout_centerHorizontal="true"
        android:text="Time to go!"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_margin="8dp"
        android:id="@+id/tvDialogQuestDescription"
        android:layout_below="@id/tvDialogQuestTitle"
        android:text="We've got a task for you...Pass 1 kilometer today to continue."
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:layout_toEndOf="@id/ivDialogQuestIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/ivDialogQuestIcon"
        android:layout_below="@id/tvDialogQuestDescription"
        android:id="@+id/tvDialogQuestExpReward"
        android:drawableStart="@drawable/place_experience"
        android:text="500"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/tvDialogQuestCreditsReward"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/tvDialogQuestExpReward"
        android:layout_below="@id/tvDialogQuestDescription"
        android:drawableStart="@drawable/place_money"
        android:text="100"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="48dp" />

    <Button
        android:layout_below="@id/tvDialogQuestExpReward"
        android:id="@+id/btnDialogQuestAccept"
        android:text="@string/accept"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>